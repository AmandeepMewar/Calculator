<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/black_shade_1"
    tools:context="com.MyCalculator.calculator.MainActivity">



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:text=""
        android:textSize="25sp"
        android:background="@null"
        android:paddingHorizontal="30dp"
        android:maxLines="1"
        android:maxLength="15"
        android:id="@+id/SecondaryTxtView"
        android:textColor="@color/white"
        android:textAlignment="textEnd"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text=""
        android:maxLength="10"
        android:singleLine="true"
        android:paddingHorizontal="30dp"
        android:textColor="@color/white"
        android:background="@null"
        android:textSize="50sp"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:id="@+id/PrimaryTxtView"
        android:textAlignment="viewEnd"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/ColorGray"
        android:layout_height="match_parent"
        app:contentPadding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin= "3dp"
                    android:layout_height="80dp"
                    android:text="AC"
                    android:id="@+id/btnAllClear"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="C"
                    android:id="@+id/btnClear"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="%"
                    android:id="@+id/btnMod"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="/"
                    android:id="@+id/btnDivide"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="7"
                    android:id="@+id/btnSeven"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="8"
                    android:id="@+id/btnEight"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:id="@+id/btnNine"
                    android:text="9"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="x"
                    android:id="@+id/btnMultiply"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="4"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="4"
                    android:id="@+id/btnFour"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="5"
                    android:id="@+id/btnFive"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="6"
                    android:id="@+id/btnSix"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="-"
                    android:id="@+id/btnSub"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="1"
                    android:id="@+id/btnOne"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="2"
                    android:id="@+id/btnTwo"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="3"
                    android:id="@+id/btnThree"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operator_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="+"
                    android:id="@+id/btnAdd"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="."
                    android:id="@+id/btnDot"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:background="@drawable/btn_operand_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="0"
                    android:id="@+id/btnZero"
                    android:textSize="30sp"
                    android:textColor="@color/ColorMost"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="170dp"
                    android:background="@drawable/btn_assignment_layout"
                    android:layout_margin="3dp"
                    android:layout_height="80dp"
                    android:text="="
                    android:id="@+id/btnEqual"
                    android:textSize="30sp"
                    android:textColor="@color/ColorTextOperators"/>

            </LinearLayout>




        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>